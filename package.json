{
  "name": "ecobeat-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Ecobeat - Sustainable lifestyle tracking app",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter=\"./apps/*\" dev",
    "dev:api": "pnpm --filter @ecobeat/api dev",
    "dev:mobile": "pnpm --filter @ecobeat/mobile dev",
    "build": "pnpm --recursive build",
    "build:api": "pnpm --filter @ecobeat/api build",
    "build:mobile": "pnpm --filter @ecobeat/mobile build",
    "build:deploy": "pnpm build:api:full && pnpm infra:build",
    "build:api:full": "pnpm --filter @ecobeat/shared build && pnpm --filter @ecobeat/api build && pnpm --filter @ecobeat/api build:lambda-bundle",
    "test": "pnpm --recursive test",
    "lint": "pnpm --recursive lint",
    "lint:fix": "pnpm --recursive lint:fix",
    "type-check": "pnpm --recursive type-check",
    "clean": "pnpm --recursive clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky install",
    "infra:build": "pnpm --filter @ecobeat/infrastructure build",
    "infra:synth": "pnpm --filter @ecobeat/infrastructure synth",
    "deploy:staging": "pnpm build:deploy && pnpm infra:deploy:staging",
    "deploy:prod": "pnpm build:deploy && pnpm infra:deploy:prod",
    "infra:deploy:staging": "pnpm --filter @ecobeat/infrastructure cdk deploy --context stage=staging",
    "infra:deploy:prod": "pnpm --filter @ecobeat/infrastructure cdk deploy --context stage=prod",
    "infra:destroy:staging": "pnpm --filter @ecobeat/infrastructure cdk destroy --context stage=staging",
    "infra:destroy:prod": "pnpm --filter @ecobeat/infrastructure cdk destroy --context stage=prod"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^4.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "tsx": "^4.16.2",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
