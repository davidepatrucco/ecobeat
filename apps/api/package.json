{
  "name": "@ecobeat/api",
  "version": "1.0.0",
  "description": "Ecobeat API server",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:lambda": "tsc && cp package.json dist/ && cd dist && npm install --production",
    "dev": "tsx watch src/index.ts",
    "dev:lambda": "tsx watch src/lambda.ts",
    "start": "node dist/index.js",
    "start:lambda": "node dist/lambda.js",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "dependencies": {
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.4.5",
    "zod": "^3.23.8",
    "@vendia/serverless-express": "^4.12.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.10",
    "@types/aws-lambda": "^8.10.143",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12"
  }
}
